{
    "name": "Miniconda3",
    "build": {
      "image": "wn1980/miniconda3-devcontainer",
      "dockerfile": "Dockerfile",
      "args": {
        "VARIANT": "3" // Python 3.x, adjust as needed
      }
    },
    "workspaceMount": "source=webapp_ws,target=/workspace,type=volume",
    "workspaceFolder": "/workspace",
    "customizations": {
      "vscode": {
        "extensions": [
            "ms-python.python",
            "ms-python.vscode-pylance",
            "google.geminicodeassist"
        ],
        "settings": {
          "python.defaultInterpreterPath": "/opt/conda/bin/python"
        }
      }
    },
    //"postCreateCommand": "conda init bash && conda config --set auto_activate_base false",
    "remoteUser": "ubuntu"
  }
  